{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2020",                 // cambiado a un valor permitido (min√∫sculas)
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest", "vite/client"]
  },
  "include": [
    "src/**/*"
  ]
}