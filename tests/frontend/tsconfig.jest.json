{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2020",
    "module": "ESNext",                       // <- habilita import.meta
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "baseUrl": "../../",
    "paths": {
      "@/*": ["src/frontend/src/*"]
    }
  },
  "include": [
    "../../src/frontend/src/**/*",
    "./**/*"
  ]
}
