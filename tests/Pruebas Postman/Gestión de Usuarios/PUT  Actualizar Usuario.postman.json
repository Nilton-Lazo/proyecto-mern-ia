{
  "info": {
    "name": "PUT Actualizar Usuario",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "PUT Actualizar Usuario",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Nuevo Nombre\",\n  \"avatar\": \"https://picsum.photos/100\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/users/{{user_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "users", "{{user_id}}"]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('200 OK', () => pm.response.to.have.status(200));",
              "pm.test('Nombre actualizado', () => {",
              "  const res = pm.response.json();",
              "  pm.expect(res.name).to.eql('Nuevo Nombre');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}