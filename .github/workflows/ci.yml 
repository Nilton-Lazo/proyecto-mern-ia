name: CI

on:
  push:
    branches:
      - '**'          # ejecuta en cualquier rama
  pull_request:
    branches:
      - '**'
  workflow_dispatch:    # permite lanzarlo manualmente

permissions:
  contents: read

jobs:
  test:
    runs-on: ubuntu-latest
    strategy:
      fail-fast: false
      matrix:
        node: [20]     # Node 20 va bien con React 19 / Jest

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Node ${{ matrix.node }}
        uses: actions/setup-node@v4
        with:
          node-version: ${{ matrix.node }}
          cache: 'pnpm'

      - name: Enable Corepack (pnpm)
        run: corepack enable

      - name: Install deps
        run: pnpm install --frozen-lockfile

      # Corre exactamente lo que tienes en package.json
      - name: Run tests (root)
        run: pnpm test

      - name: Run frontend tests (explicit)
        run: pnpm test:frontend

      - name: Run backend tests (explicit)
        run: pnpm test:backend